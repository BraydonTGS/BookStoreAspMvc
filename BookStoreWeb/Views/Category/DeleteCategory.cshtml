@model Category

<form method="post" asp-action="DeleteCategory">
    <div class="border p-3 mt-4 bg-secondary border border-warning rounded-1">
        <div class="row pb-2">
            <h2 class="text-warning">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <input asp-for="CategoryId" class="form-control" type="hidden" />
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger rounded-1" style="width:150px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-info" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
