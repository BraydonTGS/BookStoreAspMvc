@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-warning">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-warning">Create New Category</a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped bg-light border border-warning" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td width="50%">
                    @c.Name
                </td>
                <td width="30%">
                    @c.DisplayOrder
                </td>
            </tr>
        }
    </tbody>

</table>

</div>