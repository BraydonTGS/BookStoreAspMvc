@model Category 

<form method="post" asp-action="UpdateCategory">
    <div class="border p-3 mt-4 bg-secondary border border-warning rounded-1">
        <div class="row pb-2">
            <h2 class="text-warning">Update Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <input asp-for="CategoryId" class="form-control" type="hidden" />
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
         <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning rounded-1" style="width:150px">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-info" style="width:150px">Back to List</a>
    </div>
</form>

@section Scripts{
        <partial name="_ValidationScriptsPartial" />
}
